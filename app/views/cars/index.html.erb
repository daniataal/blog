<p id="notice"><%= notice %></p>

<h1>Cars</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.title %></td>
        <td><%= car.body %></td>
        <td><%= car.user_id %></td>
        <td><%= link_to 'Show', car %></td>

        <% if current_user && current_user.admin %>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <%= link_to 'New Car', new_car_path %>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
        <% end %>
    <% end %>
  </tbody>
</table>

<br>
